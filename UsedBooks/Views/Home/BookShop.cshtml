

@model  IEnumerable<UsedBooks.Models.BookShop>

<table style="width:100%;border:0">
    <tbody>
        <tr>
            <td>
                @foreach(var shop in Model)
                {
                    <div class="shop_2">
                        <div class="shop_content">
                            <table style="width:100%;height:100%;border:0">
                                <tbody>
                                    <tr>
                                        <td style="height:27px;">
                                            <span class="bluecolor">店主</span>
                                           :@shop.User
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="width:45%;height:25px">
                                            <span class="bluecolor">藏书</span>
                                            @shop.BookNum
                                            <span class="bluecolor">本</span>
                                        </td>
                                        <td style="width:55%">
                                            <span class="bluecolor">成交</span>
                                            0
                                            <span class="bluecolor">本</span>
                                        </td>
                                    </tr>
                                    <tr>
                                         <td style="height:27px;">
                                            <span class="bluecolor">开店日期</span>
                                           :@shop.OpenTime
                                        </td>
                                    </tr>
                                    <tr>
                                         <td style="height:27px;">
                                            <span class="bluecolor">口号</span>
                                           :只求出！！！！
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="shop_name">
                            @Html.ActionLink(shop.User, "Order", new { id=shop.UserID})

                            </div>
                    </div>
                }
            </td>
        </tr>
    </tbody>
</table>
  