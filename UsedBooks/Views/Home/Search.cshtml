@model IEnumerable< UsedBooks.Models.Book>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_HomePage1.cshtml";
}


@if (IsAjax)
{
    Layout = null;
}
<script src="../../Scripts/jquery-1.7.1.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('.infobox').hide();
        $('.book_title').mouseover(function () {
            $('.infobox').show(slow);
        });
        $('book_title').mouseout(function () {
            $('.infobox').hide(slow);
        });
    }
        )
</script>

<link href="@Url.Content("~/Content/css.css")" rel="stylesheet" type="text/css" />
<div class="left_box">
    <h3>
<a id="mybooks" name="mybooks"></a>
搜索结果
</h3>
    <div class="notes">
<strong class="highlight">点击书名</strong>
后就可以看到
<strong class="highlight">书本的详细信息</strong>
</div>
</div>
     
      
      <table width="100%" cellspacing="0" cellpadding="0" border="0" align="center">
     	<tbody>
          <tr>
                <td colspan="2">
                    @foreach (var book in Model)
                    { 
                        <div class="book_frame">
                            <div class="book_author">@book.Author 著</div>
                            <div class="book_text"><img width="16" height="11" src="../../Content/images/head_06.gif" style="float:right; margin-bottom:20px;"/></div>
                            <div class="book_title" id="book_title">
                              @Html.ActionLink(book.Name, "Order", new { id=book.BookID})   </div>
                             <div class="book_title">
                               @book.Publish  出版社</div>
                            <div class="book_price">
                                <div class="before">@book.OldPrice 元</div>
                                <div class="now">@book.Price 元</div>
                            </div>
                        </div>
                    }

                    <span class="infobox">
                        <table width="100%" border="0">
                            <tbody>
                                <tr>
                                    <td colspan="2">书名： 常微分方程</td>
                                </tr>
                                <tr>
                                    <td colspan="2">出版社： 浙江大学出版社</td>
                                </tr>
                                <tr>
                                    <td width="65%">作者： 蔡燧林</td>
                                    <td width="35%" rowspan="2">
                                        <div align="left">
                                            <strong class="highlight">
                                                <a href="reserve.php?bookid=13071">点击预定</a>
                                            </strong>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>新旧程度： 9成新</td>
                                </tr>
                            </tbody>
                        </table>
                    </span>
                </td>
          </tr>
          <tr>
          </tr>
      </tbody>
       </table>
        
@Html.Partial("_PagingS")
