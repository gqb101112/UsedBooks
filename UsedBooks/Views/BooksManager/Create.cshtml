                    @Html.DropDownListFor(x => x.Category, new SelectList(new string[] { "--请选择学院--", "工商管理学院","旅游与城市管理学院","财务与会计学院","统计与数学学院","经济学院","金融学院","食品与生物工程学院","环境科学与工程学院","信息与电子工程学院","计算机与信息工程学院","法学院","人文与传播学院","公共管理学院","外国语学院","日本语言文化学院","艺术设计学院","马克思主义学院","杭州商学院","章乃器学院"}))
                </td>
            </tr>
             <tr>
                <td width="7%">图书馆类：</td>
                <td width="38%">
                @Html.DropDownListFor(x => x.Categories, new SelectList(new string[] {"未分类", "A：马列、毛邓", "B：哲学、宗教", "C：社会科学", "D：政治、法律","E：军事","F：经济","F：经济","H：语言、文字","I：文学"
           ,"J：艺术","K：历史、地理","N：自然科学","O：数、理、化科学","P：天文、地球科学","Q：生物科学","R：医学、卫生","S：农业科学","T：工业、电脑技术","U：交通运输","V：航空航天","X：环境科学","Z：综合类、工具书"}))
                </td>
