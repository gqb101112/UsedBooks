@model UsedBook.Models.BookUp
@{
    ViewBag.Title = "Create";
}



<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="left_box">
<h3>
<a id="adb" name="adb"></a>
添加藏书
</h3>
<div class="notes">快快添书吧，藏书越多，书店排位越高</div>
    </div>
@using (Html.BeginForm("Create","BooksManager",FormMethod.Post))
{
    @Html.ValidationSummary(true)
  
    <table width="100%" style="border: #FFCC66 dotted 1px; border-top: none;">
        <tbody>
            <tr>
                <td class="highlight" colspan="4">**必填信息：</td>
            </tr>
            <tr>
                <td width="7%">书名：</td>
                <td width="38%">
                @Html.TextBoxFor(m => m.Name)
                </td>
                <td width="10%">原价：</td>
                <td width="45%">
                    
                   @Html.TextBoxFor(m=>m.OldPrice)元
                </td>
            </tr>
             <tr>
                <td width="7%">作者：</td>
                <td width="38%">
                @Html.TextBoxFor(m => m.Author)
                </td>
                <td width="10%">现价：</td>
                <td width="45%">
                    @Html.TextBoxFor(m=>m.Price)
                </td>
            </tr>
             <tr>
                <td width="7%">出版社：</td>
                <td width="38%">
                @Html.TextBoxFor(m => m.Publish)
                </td>
                <td width="10%">新旧程度：</td>
                <td width="45%">
                     @Html.DropDownListFor(x => x.OldLevel, new SelectList(new string[] { "10成", "9成", "8成", "7成", "6成", "5成", "4成", "3成" }))
                </td>
            </tr>
            <tr>
                <td width="7%">数量：</td>
                <td width="38%">
                @Html.TextBoxFor(m => m.TotalNum)
                </td>
                <td width="10%">所属学院：</td>
