            </tr>
            <tr>
                <td width="7%">所属课程：</td>
                <td width="38%">
                    @Html.EditorFor(x=>x.Course)
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <div align="center">
                        <input class="button" type="submit" value="添加" name="Submit22">
                    </div>
                </td>
                <td></td>
                <td>
                    <div align="center">
                        <input class="button" type="reset" value="重置" name="Submit22">
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
    
}


