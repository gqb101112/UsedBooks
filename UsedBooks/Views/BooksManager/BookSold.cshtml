@model IEnumerable<UsedBooks.Models.Book>

<h3>
      <a id="allbooks" name="allbooks"></a>
      我的最新已售
      </h3>
      
      <table width="100%" cellspacing="0" cellpadding="0" border="0" align="center">
     	<tbody>
             
             <tr>
                <td colspan="2">
                    @foreach (var book in Model)
                    { 
                        <div class="book_frame_large">
                            <div class="book_frame">
                                <div class="book_author">@book.Author 著</div>
                                <div class="book_text">
                                    <img width="16" height="11" src="../../Content/images/head_06.gif" style="float: right; margin-bottom: 20px;" /></div>
                                <div class="book_title">
                                    @Html.ActionLink(book.Name, "Details", new { id = book.BookID })
                                </div>
                                <div class="book_title">
                                    @book.Publish  出版社
                                </div>
                                <div class="book_price">
                                    <div class="now">@book.Price 元</div>
                                </div>
                            </div>
  @using (Html.BeginForm("BookStateChange", "BooksManager", FormMethod.Post, new { bid = book.BookID, id = Request.Form.Get("tag") }))
    {
                            <div class="book_note">
                                <table width="100%" cellspacing="0" cellpadding="0" border="0">
                                    <tbody>

                                       <tr>
                                            <td>
                                                <select id="tag" name="tag">
                                                    <option  value="0">待售</option>
                                                    
                                                    <option selected="selected" value="1">已售</option>
                                                </select>
                                                
                                            </td>
                                           <td style="padding-top: 5px;">
                                               <input type="image" onclick=""
                                                   value="更改" name="Submit3" src="../Content/images/go.gif">
                                               
                                               
                                           </td>
                                        </tr>
                                   
                                        </tbody>
                                </table>
                                
                               
                            </div>
  }
                        </div>
                    }
                    
                    
                </td>
          </tr>
          <tr>
          </tr>
      </tbody>
       </table>
        