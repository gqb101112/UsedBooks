
<p>
    @if (Model.HasPreviousPage)
    {
        @Html.ActionLink("<< 首页", "BookNeedShow", new
   {
       page = 1,
       sortOrder = ViewBag.CurrentSortOrder
   })
        @Html.Raw("&nbsp;");
        @Html.ActionLink("< 上一页", "BookNeedShow", new
   {
       page = Model.PageNumber - 1,
       sortOrder =
           ViewBag.CurrentSortOrder
   })
    }
    else
    {
        @:<< 首页
        @Html.Raw("&nbsp;");
        @:< 上一页
    }
    &nbsp;&nbsp;
    @if (Model.HasNextPage)
    {
        @Html.ActionLink("下一页 >", "BookNeedShow", new
   {
       page = Model.PageNumber + 1,
       sortOrder = ViewBag.CurrentSortOrder
   })
        @Html.Raw("&nbsp;");
        @Html.ActionLink("末页 >>", "BookNeedShow", new
   {
       page = Model.PageCount,
       sortOrder = ViewBag.CurrentSortOrder
   })
    }
    else
    {
        @:下一页 >
        @Html.Raw("&nbsp;")
        @:末页 >>
    }
</p>