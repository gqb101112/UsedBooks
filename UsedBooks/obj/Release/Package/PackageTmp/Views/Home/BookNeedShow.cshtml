@model IEnumerable<UsedBooks.Models.BookNeed>

@if (IsAjax)
{
    Layout = null;
}
 <table width="100%" cellspacing="0" cellpadding="0" border="0" align="center">
     	<tbody>
          <tr>
                <td colspan="2">
                    @foreach (var book in Model)
                    { 
                        <div class="order_book_frame ">
                            <div class="book_author">求书啦！！</div>
                            <div class="book_text"><img width="16" height="11" src="../../Content/images/head_06.gif" style="float:right; margin-bottom:20px;"/></div>
                            <div class="book_title">
                              @Html.ActionLink(book.BName, "Order")   </div>
                             <div class="book_title">
                              Phone: @book.Phone  </div>
                            <div class="book_price">
                                <div class="now">求购价 </div>
                                <div class="now">@book.price 元</div>
                            </div>
                        </div>
                    }
                    
                    
                </td>
          </tr>
          <tr>
          </tr>
      </tbody>
       </table>
@Html.Partial("_PagingN")